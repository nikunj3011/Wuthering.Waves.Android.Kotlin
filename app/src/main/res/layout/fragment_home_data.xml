<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1200dp"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/characterListItemBottomSheet"
        android:layout_width="413dp"
        android:layout_height="1134dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/layout_bg">

        <TextView
            android:id="@+id/characterNameBottomSheet"
            android:layout_width="174dp"
            android:layout_height="39dp"
            android:layout_margin="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewCharacterBottomSheet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageViewCharacterBottomSheet"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageViewCharacterBottomSheet"
            android:layout_width="91dp"
            android:layout_height="153dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.434"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textWeaponCharacterBottomSheet"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewCharacterBottomSheet" />

        <TextView
            android:id="@+id/textCharacterSonataEffectBottomSheet"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:text="TextView"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.694"
            app:layout_constraintStart_toEndOf="@+id/textWeaponCharacterBottomSheet"
            app:layout_constraintTop_toBottomOf="@+id/textTypeCharacterBottomSheet"
            app:layout_constraintVertical_bias="0.826" />

        <TextView
            android:id="@+id/textCharacterWeaponBottomSheet"
            android:layout_width="174dp"
            android:layout_height="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="36dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageViewCharacterBottomSheet" />

        <TextView
            android:id="@+id/textTypeCharacterBottomSheet"
            android:layout_width="173dp"
            android:layout_height="26dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="700dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/textCharacterWeaponBottomSheet"
            app:layout_constraintStart_toEndOf="@+id/imageViewCharacterBottomSheet"
            app:layout_constraintTop_toBottomOf="@+id/characterNameBottomSheet"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>